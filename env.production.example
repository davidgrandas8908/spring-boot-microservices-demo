# Variables de Entorno para Producción - EJEMPLO
# Copiar este archivo a .env.production y cambiar los valores

# Versiones de los servicios
PRODUCTOS_VERSION=1.0.0
INVENTARIO_VERSION=1.0.0

# Configuración de bases de datos
PRODUCTOS_DB_PASSWORD=your_secure_productos_db_password_2024
INVENTARIO_DB_PASSWORD=your_secure_inventario_db_password_2024

# API Keys para comunicación entre servicios
PRODUCTOS_API_KEY=your_secure_productos_api_key_2024
INVENTARIO_API_KEY=your_secure_inventario_api_key_2024

# Configuración de Grafana
GRAFANA_PASSWORD=your_secure_grafana_password_2024

# Configuración de SSL (rutas a certificados)
SSL_CERT_PATH=/etc/nginx/ssl/api.example.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/api.example.com.key

# Configuración de dominio
DOMAIN=api.example.com

# Configuración de recursos
PRODUCTOS_MEMORY_LIMIT=2G
PRODUCTOS_CPU_LIMIT=1.0
INVENTARIO_MEMORY_LIMIT=2G
INVENTARIO_CPU_LIMIT=1.0

# Configuración de Redis
REDIS_MAX_MEMORY=1gb
REDIS_PASSWORD=your_secure_redis_password_2024

# Configuración de monitoreo
PROMETHEUS_RETENTION_TIME=200h
GRAFANA_ADMIN_EMAIL=admin@example.com

# Configuración de logs
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_MICROSERVICES=INFO

# Configuración de JVM
JAVA_OPTS_PRODUCTOS=-Xms1g -Xmx2g -XX:+UseG1GC -XX:+UseStringDeduplication
JAVA_OPTS_INVENTARIO=-Xms1g -Xmx2g -XX:+UseG1GC -XX:+UseStringDeduplication

# Configuración de backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Configuración de seguridad
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_BURST=20

